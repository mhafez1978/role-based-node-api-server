<%- include('./layouts/header') %>

<section class="flash-msg">
  <div class="container">
    <div class="row">
      <%- include('./layouts/flash-messages'); %>
    </div>
  </div>
</section>

<section>
  <div class="loginContainer">
    <div class="loginOverlay">
      <center>
        <h4 style="color:#fff !important;">Signup for a New Account</h4>
      </center>
      <div class="container">
        <div class="login" style="width:500px !important">
          <form class="form" method="post" action="/auth/register">
            <h2>Your Basic Info</h2>
            <input type="text" name="fname" id="fname"  placeholder="First Name" value="<%= locals.fname ? fname : '' %>">
            <input type="text"  name="lname" id="lname" placeholder="Last Name" value="<%= locals.lname ? lname : '' %>">
            <input type="text"  name="username" id="username" placeholder="Username" value="<%= locals.username ? username : '' %>">
            <input type="text"  name="email" id="email" placeholder="Email" value="<%= locals.email ? email : '' %>">
            <input type="password"  name="password" id="password" placeholder="Password" value="<%= locals.password ? password : '' %>">
            <input type="password"  name="passwordConfirmation" id="passwordConfirmation" placeholder="Confirm Password" value="<%= locals.passwordConfirmation ? passwordConfirmation : '' %>">
            <input type="submit" value="Register" class="submit">
          </form>
          <p>
            <center style="color:#fff">
              Already a member ? Login <a style="color:#fff" href="/auth/login">here</a>
            </center>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
<%- include('./layouts/footer') %>
